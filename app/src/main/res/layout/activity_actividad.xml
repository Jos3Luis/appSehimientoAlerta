<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActividadActivity">





    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TableRow android:padding="5dp">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lbl_origen"
                android:textSize="14sp"
                android:textStyle="bold" />
            <EditText
            android:id="@+id/txtOrigen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:inputType="text"
            android:hint="Latitud,Longitud"
            android:paddingLeft="5dp"
            android:background="@drawable/edittext_default"/>
            <Button
                android:id="@+id/btnOrigen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickObtenerActual"
                android:background="@drawable/button_default"
                android:text="Obtener" />
        </TableRow>
    <TableRow android:padding="5dp">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lbl_destino"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:inputType="none"
            android:hint="Latitud,Longitud"
            android:paddingLeft="5dp"
            android:background="@drawable/edittext_default" />

        <Button
            android:id="@+id/btnDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_default"
            android:onClick="clickElegir"
            android:text="Elegir" />
    </TableRow>
        <TableRow android:padding="5dp">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:text="@string/lbl_detalles"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:inputType="textMultiLine"
                android:paddingLeft="5dp"
                android:layout_span="2"
                android:background="@drawable/edittext_default"/>
        </TableRow>
        <TableRow android:padding="5dp"
            android:gravity="right">
            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_default"
                android:layout_span="1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="Registrar" />
        </TableRow>
    </TableLayout>
</LinearLayout>